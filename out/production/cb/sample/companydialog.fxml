<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<DialogPane fx:controller="sample.CompanyController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Information about company
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Company: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="companyField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

            <Label text="Region: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="boxRegions" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="add" GridPane.columnIndex="2" GridPane.rowIndex="1" text="Add region" onAction="#newRegion" />

            <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

            <Label text="Comment: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="commentField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</DialogPane>
